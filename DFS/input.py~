#!/usr/bin/python

import socket
import sys

port_number = int(sys.argv[1])

#Create a socket
sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

#Connect the socket to the localhost on specified port from command line
sock.connect(('localhost', port_number))


while(1):
	command=raw_input('user@NiallsServer~/')
	sock.send(command)
	print "Before receive"
	data=sock.recv(1000000)
	print "after receive"
	print data
